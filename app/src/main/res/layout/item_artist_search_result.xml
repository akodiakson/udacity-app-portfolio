<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/artistImage"
        tools:src="@drawable/notification_template_icon_bg"
        android:contentDescription="@string/artist_image_content_description"
        android:layout_width="@dimen/artist_search_result_image_dimen"
        android:layout_height="@dimen/artist_search_result_image_dimen"
        android:layout_margin="@dimen/search_result_margin_top" />

    <TextView
        android:id="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        style="@android:style/TextAppearance.Material.Body2"
        tools:text="Artist Name" />

</LinearLayout>